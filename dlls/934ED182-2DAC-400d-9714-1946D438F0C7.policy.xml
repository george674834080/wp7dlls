<CeSecurityPolicyFile Description="Simple Remote Procedures (Sirep) For Application Development policy definition" Vendor="Microsoft" RequiredOSVersion="7.00" FileVersion="7.00" xmlns="urn:Microsoft.PlatformBuilder/CeSecurityPolicy">

  <!-- Run SirepServer with standard privilege to limit risk of access to system resources -->
  
<!--Begin Generated accounts and routing/authz rules for S-1-5-112-0-0X20-0X0000002C -->
<Macro Id="SIREP_USER_NAME" Value="S-1-5-112-0-0X20-0X0000002C" />
<Account Id="$(SIREP_USER_NAME)" FriendlyName="Simple Remote Procedures (Sirep) chamber" Description="Autogenerated chamber for Simple Remote Procedures (Sirep) chamber" Type="User">
<MemberOfGroup GroupAccountId="$(STANDARD_RIGHTS_CHAMBER_GROUP_NAME)" />
</Account>
<!--Begin Generated routing/authz rules for SirepServerAppDev.exe -->
<Rule Description="Route SirepServerAppDev.exe" ResourceIri="$(LOADERVERIFIER_ROUTE_BY_NAME)/PRIMARY/WINDOWS/SIREPSERVERAPPDEV.EXE" SpeakerAccountId="$(SYSTEM_USER_NAME)" PriorityCategoryId="PRIORITY_LOW">
<Authorize>
<Match AccountId="$(SIREP_USER_NAME)" AuthorizationIds="LV_ACCESS_EXECUTE" />
</Authorize>
</Rule>
<Rule Description="Authorize SirepServerAppDev.exe be loadable to $(SIREP_USER_NAME) and  chambers" ResourceIri="$(LOADERVERIFIER_EXE_AUTHZ_INROM_ROOT)/WINDOWS/SIREPSERVERAPPDEV.EXE" SpeakerAccountId="$(SYSTEM_USER_NAME)" PriorityCategoryId="PRIORITY_STANDARD">
<Authorize>
<Match AccountId="$(SIREP_USER_NAME)" AuthorizationIds="LV_ACCESS_EXECUTE,LV_ACCESS_LOAD" />
</Authorize>
</Rule>
<!--End Generated routing/authz rules for SirepServerAppDev.exe -->
<!--End Generated accounts and routing/authz rules for S-1-5-112-0-0X20-0X0000002C -->


  <!-- Give SirepServer access to all files in the tools directory for GetFileInfo, GetFile, and PutFile support. -->
  <Rule Action="CreateNew" Description="Grant Simple Remote Procedures (Sirep) Server access to tools file paths." ResourceIri="$(FILESYS_PRIMARY_ROOT)/APPLICATION%20DATA/PHONE%20TOOLS/10.0/(*)" SpeakerAccountId="$(SYSTEM_USER_NAME)" PriorityCategoryId="PRIORITY_STANDARD">
    <Authorize>
      <Match Action="Add" AccountId="$(SIREP_USER_NAME)" AuthorizationIds="ALL_ACCESS"></Match>
    </Authorize>
  </Rule>

</CeSecurityPolicyFile>
